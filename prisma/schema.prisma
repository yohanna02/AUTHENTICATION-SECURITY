generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model RegisteredFingerprint {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        Person?
  fingerprint String   @unique
  createdAt   DateTime @default(now())
}

type Person {
  name       String
  id         String
  DOB        DateTime
  photo      String
  nextOfKins String
  phone      String
  address    String
}
